<Window x:Class="SteamManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Steam Manager" Height="500" Width="900"
        Background="#1e1e1e" Foreground="White"
        Opacity="0.95">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="{Binding Loc.Welcome}" FontWeight="Bold" FontSize="16" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding Loc.Language}" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="120" SelectedItem="{Binding SelectedLanguage}" ItemsSource="{Binding Languages}"/>
            <Button Content="{Binding Loc.Refresh}" Margin="10,0" Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <Border Background="#2b2b2b" CornerRadius="4" Padding="5" DockPanel.Dock="Top">
            <DataGrid ItemsSource="{Binding Accounts}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedAccount}"
                      HeadersVisibility="Column" RowBackground="#333" AlternatingRowBackground="#383838" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Username}"
                                        Header="{Binding DataContext.Loc.Username, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <DataGridTextColumn Binding="{Binding Xp}"
                                        Header="XP"/>
                    <DataGridTextColumn Binding="{Binding Drops}"
                                        Header="{Binding DataContext.Loc.Drops, RelativeSource={RelativeSource AncestorType=Window}}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,10,0,0" VerticalAlignment="Center">
            <StackPanel Margin="0,0,5,0">
                <TextBlock Text="{Binding Loc.Username}" FontSize="10"/>
                <TextBox Width="100" Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="0,0,5,0">
                <TextBlock Text="{Binding Loc.Password}" FontSize="10"/>
                <TextBox Width="100" Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="0,0,5,0">
                <TextBlock Text="{Binding Loc.SteamId}" FontSize="10"/>
                <TextBox Width="130" Text="{Binding NewSteamId, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Margin="0,0,5,0">
                <TextBlock Text="{Binding Loc.ApiKey}" FontSize="10"/>
                <TextBox Width="130" Text="{Binding NewApiKey, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <Button Content="{Binding Loc.AddAccount}" Width="100" Command="{Binding AddAccountCommand}"/>
            <Button Content="{Binding Loc.Launch}" Width="100" Command="{Binding LaunchCommand}" Margin="10,0,0,0"/>
            <Button Content="{Binding Loc.Trade}" Width="100" Command="{Binding TradeCommand}" Margin="5,0,0,0"/>
        </StackPanel>
    </DockPanel>
</Window>
