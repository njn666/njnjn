<Window x:Class="SteamManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:p="clr-namespace:SteamManager.Resources"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Steam Manager" Height="450" Width="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <TextBlock Text="{x:Static p:Strings.Language}" Margin="0,0,5,0"/>
            <ComboBox Width="120" SelectedItem="{Binding SelectedLanguage}" ItemsSource="{Binding Languages}"/>
            <Button Content="{x:Static p:Strings.Refresh}" Margin="10,0" Command="{Binding RefreshCommand}"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Accounts}" AutoGenerateColumns="False" Margin="5" SelectedItem="{Binding SelectedAccount}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static p:Strings.Username}" Binding="{Binding Username}"/>
                <DataGridTextColumn Header="XP" Binding="{Binding Xp}"/>
                <DataGridTextColumn Header="{x:Static p:Strings.Drops}" Binding="{Binding Drops}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="5">
            <Button Content="{x:Static p:Strings.Launch}" Width="100" Command="{Binding LaunchCommand}" Margin="0,0,5,0"/>
            <Button Content="{x:Static p:Strings.Trade}" Width="100" Command="{Binding TradeCommand}"/>
        </StackPanel>
    </DockPanel>
</Window>
